{
    "extends": "../../node_modules/@dopamyn/framework/tsconfig.common.json",
    "compilerOptions": {
        "rootDir": "..",
        "baseUrl": "..",
        "paths": {

            "@client/*": ["../node_modules/@dopamyn/framework/src/client/*"],
            "@common/*": ["../node_modules/@dopamyn/framework/src/common/*"],

            // Only used for typings (ex: ServerResponse)
            // Removed before webpack compilation
            "@server/*": ["../node_modules/@dopamyn/framework/src/server/*"],

            "@validator": ["../node_modules/@dopamyn/framework/src/client/data/input"],
            "@router": ["../node_modules/@dopamyn/framework/src/client/router"],
            "@errors": ["../node_modules/@dopamyn/framework/src/common/errors"],

            "@models": ["../.cache/client/models"],

            "@/*": ["./*"],
           
            // ATTENTION: Les références à preact doivent toujours pointer vers la même instance
            "react": ["../node_modules/@dopamyn/framework/node_modules/preact/compat"],
            "react-dom/test-utils": ["../node_modules/@dopamyn/framework/node_modules/preact/test-utils"],
            "react-dom": ["../node_modules/@dopamyn/framework/node_modules/preact/compat"], // Must be below test-utils
            "react/jsx-runtime": ["../node_modules/@dopamyn/framework/node_modules/preact/jsx-runtime"],
            "preact/jsx-runtime": ["../node_modules/@dopamyn/framework/node_modules/preact/jsx-runtime"]
        }
    },
    "include": [
        ".",
        "../../node_modules/framework/src/types/global"
    ]
}